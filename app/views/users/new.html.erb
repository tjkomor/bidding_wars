<div class="col m9">
  <div class="row">
    <div class="col m6 offset-m3 top-margin">
      <h4>Create Account</h4>
      <%= form_for(:info, url: users_path) do |f| %>
        <%= f.label :username %>
        <%= f.text_field :username %>
        <%= f.label :password %>
        <%= f.password_field :password %>
        <%= f.label :first_name %>
        <%= f.text_field :first_name %>
        <%= f.label :last_name %>
        <%= f.text_field :last_name %>
        <%= f.label :email_address %>
        <%= f.text_field :email_address %>
        <%= f.label :phone_number %>
        <%= f.text_field :phone_number, pattern: '\d{3}[\-]\d{3}[\-]\d{4}', placeholder: "xxx-xxx-xxxx"%>
        <%= f.label :line_one, "Address Line One" %>
        <%= f.text_field :line_one %>
        <%= f.label :line_two, "Address Line Two" %>
        <%= f.text_field :line_two %>
        <%= f.label :city %>
        <%= f.text_field :city %>
        <%= f.label :state %>
        <%= f.text_field :state %>
        <%= f.label :zip %>
        <%= f.text_field :zip, pattern: '\d{5}', placeholder: 'xxxxx'%>
        <%= f.label :country %>
        <%= f.text_field :country, value: 'USA' %>
        <%= f.submit "Create Account", class: 'btn blue' %>
      <% end %>
    </div>
  </div>
</div>
