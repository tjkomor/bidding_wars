<div class="col m9">
  <div class="row">
    <div class="col m6 offset-m3 top-margin">
      <h4>Edit Account</h4>
        <%= form_for(@user) do |f| %>
          <%= f.label :username %>
          <%= f.text_field :username %>
          <%= f.label :password %>
          <%= f.password_field :password %>
          <%= f.label :first_name %>
          <%= f.text_field :first_name %>
          <%= f.label :last_name %>
          <%= f.text_field :last_name %>
          <%= f.label :email_address %>
          <%= f.text_field :email_address %>
          <%= f.label :image %><br>
          <%= f.file_field :image %><br><br>
          <%= f.label :phone_number %>
          <%= f.text_field :phone_number %>
          <%= f.submit "Update", class: 'btn blue' %>
        <% end %>
    </div>
  </div>
</div>
