<div class="col m9 top-margin">
  <div class="card">
    <h3>New Item</h3>
    <%= form_for(@item, html: {multipart: true}, url: platform_admin_items_path) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :description %>
      <%= f.text_field :description %>
      <%= f.label :current_bid %>
      <%= f.text_field :current_bid %>
      <%= f.label :category_id %>
      <%= f.collection_select :category_id, Category.all, :id, :name, {}, {class: "browser-default", id: "categorySelect"} %>
      <%= f.hidden_field :store_id, value: Store.find_by(slug: params[:format]).id %>
      <%= f.hidden_field :active, value: true %>
      <%= f.label :auction_length %>
      <%= f.text_field :auction_length %>
      <%= f.label :image_url %>
      <%= f.text_field :image_url %>
      <%= f.submit "Create Item" %>
    <% end %>
  </div>
</div>
