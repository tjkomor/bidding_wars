<!DOCTYPE html>
<html>
<head>
  <title>LensLease</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
  <nav>
    <div class="nav-wrapper">
      <ul id="nav-mobile" class="left hide-on-med-and-down">
      <% if current_user && current_user.admin? %>
        <a href="/" class="brand-logo center black-text">Lens-Lease</a>
        <li><%= link_to "Items", items_path %></li>
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Dashboard", dashboard_path %></li>
        <li><%= link_to "Admin Dashboard", admin_dashboard_path %></li>
        <% elsif current_user %>
        <li><%= link_to "Items", items_path %></li>
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Dashboard", dashboard_path %></li>
        <% else %>
        <a href="/" class="brand-logo center black-text">Lens-Lease</a>
        <li><%= link_to "Items", items_path %></li>
        <li><%= link_to "Home", root_path %></li>
        <% end %>
      </ul>
      <ul class="right">
        <% if current_user %>
          <li> <%= link_to "View Cart", cart_path %> </li>
          <li class="black-text log-link"><a href="/dashboard">Logged in as: <%= current_user.username %></a></li>
          <li><%= link_to "Logout", logout_path, method: :delete %></li>
        <% else %>
          <li><%= link_to "Login", login_path %></li>
          <li><%= link_to "Create Account", new_user_path %></li>
          <li> <%= link_to "View Cart", cart_path %> </li>
        <% end %>
      </ul>
    </div>
  </nav>

  <div class="container">
    <%= render partial: 'partials/flashes' %>
      <!-- <%#= content_tag :p, '', class: "flash_#{type}", onload: "Materialize.toast('sanitize(msg)', 4000)" %> -->
    <div class="row">
      <div class="sidebar col m3">
        <%= render partial: 'partials/sidenav' %>
      </div>
    <%= yield %>
    </div>
  </div>
</body>
</html>
